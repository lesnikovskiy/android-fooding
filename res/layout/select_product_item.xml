<com.fooding.views.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <CheckBox 
        android:id="@+id/checkable_selected_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:layout_alignParentLeft="true" />
    <TextView
        style="@style/FontStyle"
        android:id="@+id/checkable_selected_product_id"
        android:focusable="false"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/checkable_selected_checkbox"
        android:visibility="gone" />  
    <TextView
        style="@style/FontStyle"
        android:id="@+id/checkable_selected_product_name"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/checkable_selected_product_id" />    
    <TextView
        style="@style/FontStyle"
        android:id="@+id/checkable_selected_product_quantity"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/checkable_selected_product_name" />      
</com.fooding.views.CheckableRelativeLayout>